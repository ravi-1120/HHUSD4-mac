<apex:page controller="PDS_DocGenController" applyBodyTag="false" renderAs="pdf" showHeader="false" >
    <html>
        <head>
            <style type="text/css" media="print">
                @page {
                margin: 10px;
                
                }
                table {
                width: 100%;
                height: auto;
                }
                td {
                width:90%;
                
                }
                
            </style>
        </head>
        <body>
            <p style="margin-left:72%;margin-top:-40px;"><apex:outputText value="{!$Label.PDS_MerckAddress}" style="font-size:11px;color:#646464;font-family:'Sans-Serif';" escape="false" /></p>
            <div style="position: relative; left:69%;">
                <img src="{!$Resource.PDS_Merck_Logo_Horizontal_Teal_Grey}" width="210" height="" style="margin-top:-45px;"/>
            </div>   
            <div style="padding-top:15px;font-size:15px;"><b>MEMO</b></div><hr/>
            <table>
                <tr style="">
                    <td colspan="12" style="font-family:'Arial,Sans-Serif';font-size:15px;">
                        <!--<apex:outputText value="{!$Label.PDS_TO}" escape="false"/> <span>{!requestRecord.PDS_Requestor__r.Name}</span>-->
                        <apex:outputText value="{!$Label.PDS_TO}" escape="false"/> <span>MSD Point</span>
                    </td>       
                </tr>
                <tr style="" colspan="12">
                    <td style="font-family:'Arial,Sans-Serif';padding-top:5px;font-size:15px;">
                        <b><apex:outputText value="{!$Label.PDS_From}" escape="false" /></b> 
                       		<span>{!requestRecord.PDS_Approver__r.Name}</span>
                    </td>
                </tr>
                <tr style="margin-bottom:5px;">
                    <td style="font-family:'Arial,Sans-Serif';font-size:15px;padding-top:5px;" colspan="8">
                        <b><apex:outputText value="SUBJECT:" escape="false" /></b>
                        <span><u>MECTIZAN SHIPMENT REQUEST   {!requestRecord.Name}</u></span></td>
                    
                    <td style="padding-top:5px" colspan="3" >
                        <apex:outputText value="{!$Label.PDS_Date}" escape="false" style=" text-transform: capitalize;font-weight: bold;font-size:15px;"/>            
                        <span style="margin-right:-65px;font-size:15px;"> {! MONTH(TODAY()) }/{! DAY(TODAY()) }/{! YEAR(TODAY()) } </span>           
                    </td>
                </tr>
                <tr>
                    <td colspan="7" style="font-family:'Arial,Sans-Serif';padding-top:10px;font-size:15px;"> <apex:outputText value="{!$Label.PDS_ASMemo_Country}" escape="false" /></td>
                    <td style="font-family:'Arial,Sans-Serif';padding-top:10px;font-size:15px;">{!productLineItems[0].PDS_Country__c}</td>
                </tr>
                <tr>
                    <td style="font-family:'Arial,Sans-Serif';padding-top:5px;font-size:15px;"><apex:outputText value="{!$Label.PDS_ASMemo_AppNumber}" escape="false" /></td>
                    <td colspan="12" style="font-family:'Arial,Sans-Serif';font-size:15px;">{!requestRecord.PDS_Application_Number__c}</td>
                </tr>
                <tr>
                    <td style="font-family:'Arial,Sans-Serif';padding-top:5px;font-size:15px;"><apex:outputText value="{!$Label.PDS_ASMemo_InvNumber}" escape="false" /></td>
                    <td colspan="12" style="font-family:'Arial,Sans-Serif';font-size:15px;">{!requestRecord.PDS_U_S_Invoice_Number__c}</td>
                </tr>
                <tr>
                    <td style="font-family:'Arial,Sans-Serif';padding-top:5px;font-size:15px;"><apex:outputText value="{!$Label.PDS_ASMemo_TabApproved}" escape="false" /></td>
                    <td colspan="12" style="font-family:'Arial,Sans-Serif';font-size:15px;">{!productLineItems[0].PDS_Quantity_Approved__c}</td>
                </tr>
                <tr>
                    <td style="font-family:'Arial,Sans-Serif';font-weight: bold;padding-top:5px;font-size:15px;"><apex:outputText value="{!$Label.PDS_ASMemo_ShipRequest}" escape="false" /></td>
                    <td colspan="12" style="font-family:'Arial,Sans-Serif';font-weight: bold;font-size:15px;">{!quantityAndSIC}</td>
                </tr>
                <tr>
                    <td style="font-family:'Arial,Sans-Serif';padding-top:5px;font-size:14px;"><apex:outputText value="{!$Label.PDS_ASMemo_Timing}" escape="false" /></td>
                    <td colspan="12" style="font-family:'Arial,Sans-Serif';font-size:14px;">Immediately</td>
                </tr>
                <tr>
                    <td style="font-family:'Arial,Sans-Serif';padding-top:5px;font-size:15px;"><apex:outputText value="{!$Label.PDS_ASMemoBalance_Shipment}" escape="false" /></td>
                    <td colspan="9" style="font-family:'Arial,Sans-Serif';font-size:15px;">{!approvedQuantity-shippedQuantity}</td>
                </tr>
                <tr style="vertical-align: baseline;">
                    <td style="font-family:'Arial,Sans-Serif';padding-top:5px;font-size:15px;"><apex:outputText value="{!$Label.PDS_ASMemo_ShipNotify}" escape="false" /></td>
                    <td colspan="9" style="font-family:'Arial,Sans-Serif';font-size:15px;">
                        {!requestRecord.PDS_Ship_Notify__r.Name}<br/>
                        <!--{!requestRecord.PDS_Ship_Notify__r.Account__r.Name}<br/>-->
                        {!requestRecord.PDS_Ship_Notify__r.PDS_Shipping_Postal_Code__c}<br/>
                        {!requestRecord.PDS_Ship_Notify__r.PDS_Shipping_Street__c}<br/>	
                        {!requestRecord.PDS_Ship_Notify__r.PDS_Email__c}<br/>
                        {!requestRecord.PDS_Ship_Notify__r.PDS_Phone__c}
                    </td>
                </tr>
                <tr style="vertical-align: baseline;">
                    <td style="font-family:'Arial,Sans-Serif';padding-top:5px;font-size:15px;"><apex:outputText value="{!$Label.PDS_ASMemo_NotifyAlso}" escape="false" /></td>
                    <td colspan="9" style="font-family:'Arial,Sans-Serif';font-size:15px;">    
                        {!requestRecord.PDS_Final_Recipient__r.Name}<br/>
                        <!--{!requestRecord.PDS_Final_Recipient__r.Account__r.Name}<br/>-->
                        {!requestRecord.PDS_Final_Recipient__r.PDS_Shipping_Postal_Code__c}<br/>
                        {!requestRecord.PDS_Final_Recipient__r.PDS_Shipping_Street__c}<br/>	
                        {!requestRecord.PDS_Final_Recipient__r.PDS_Email__c}<br/>
                        {!requestRecord.PDS_Final_Recipient__r.PDS_Phone__c}
                    </td>
                </tr>
                <tr>
                    <td style="font-family:'Arial,Sans-Serif';padding-top:5px;font-size:15px;"><apex:outputText value="{!$Label.PDS_ASMemo_License}" escape="false"/></td>
                    <td colspan="7" style="font-family:'Arial,Sans-Serif';padding-top:5px;font-size:15px;">NO</td>
                </tr>
                <tr>
                    <td style="font-family:'Arial,Sans-Serif';font-size:15px;"><apex:outputText value="{!$Label.PDS_ASMemo_Receipt}" escape="false" /></td>
                    <td colspan="9" style="font-family:'Arial,Sans-Serif';font-size:15px;">{!requestRecord.PDS_Ship_Notify__r.Name}</td>
                </tr>
                <tr>
                    <td style="vertical-align: baseline;font-family:'Arial,Sans-Serif';padding-top:5px;font-size:15px;"><apex:outputText value="{!$Label.PDS_ASMemo_AirWay}" escape="false"/></td>
                    <td colspan="9" style="font-family:'Arial,Sans-Serif';padding-top:5px;font-size:15px;"><apex:outputText value="{!airwayBill}" escape="false" /></td>
                </tr>
                <tr style="padding-top:5px;">
                    <td style="vertical-align: baseline;font-family:'Arial,Sans-Serif';font-size:15px;"><apex:outputText value="{!$Label.PDS_ASMemo_Copies}" escape="false" /></td>
                    <td colspan="10" style="font-family:'Arial,Sans-Serif';font-size:15px;"><apex:outputText value="{!$Label.PDS_ASMemo_CopiesValue}" escape="false" /></td>
                </tr> 
            </table>
            
        </body>
        <apex:outputText value="{!$Label.PDS_ASMemo_Regards}" escape="false" style="padding-top:45px;font-size:15px;"/>
    </html>
</apex:page>