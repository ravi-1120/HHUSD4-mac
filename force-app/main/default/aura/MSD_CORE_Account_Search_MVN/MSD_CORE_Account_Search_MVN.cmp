<aura:component controller="AccountSearchControllerMVN" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
    <aura:attribute name="recordId" type="String"/>
    <aura:attribute name ="editInfo" type="Boolean" default="false"/>
    <aura:attribute name ="showSearch" type="Boolean" default="false"/>
    <aura:attribute name="closeSearchBtn" type="String" default="Close Search"/>
    <aura:attribute name ="showAffiliationModal" type="Boolean" default="false"/>
    <aura:attribute name="affiliationFrom" type="String"/>
    <aura:attribute name="affiliationTo" type="String"/>
    <aura:attribute name="affiliation" type="Object"/>
    <aura:attribute name ="destroyEdit" type="Boolean" default="false"/>
    <aura:registerEvent name="MSD_CORE_CC_RefreshCustInfoEvent" type="c:MSD_CORE_CC_RefreshCustInfoEvent"/>  
    <div style="padding: 0;" class="slds-box slds-theme_default">    
        <div class="slds-media__body" >
            <h2 id="header">
                <lightning:icon iconName="utility:search" size="x-small" style="margin: 7px 0px 0 8px; float: left;"></lightning:icon>
                &nbsp;
                <button class="{!if(or(v.editInfo,v.destroyEdit), 'slds-hide', 'slds-button')}" onclick="{!c.openSearchModal}">
                    <span class="slds-text-heading--small slds-truncate slds-m-right--xx-small" >Search Account</span>
                </button>
            </h2>
        </div>
    </div>
    <aura:if isTrue="{!or(v.editInfo,v.showSearch)}">
        <div id="searchAccountModal" class="slds-scrollable" aura:id="searchAccountModal" style="position:relative;">
            <section role="dialog" tabindex="-1" class="slds-modal slds-fade-in-open slds-modal_large" aria-labelledby="id-of-modalheader-h2" aria-describedby="modal-content-id-1">
                <div class="slds-modal__container" style="height: 95%; top: 5%; width: 98%;"> 
                    <!-- Header Start-->
                    <header class="slds-modal__header">
                        
                        <button class="glc-button slds-button slds-button_icon slds-modal__close slds-button_icon-inverse" title="Close" onclick="{!c.closeModal}">
                            <lightning:icon class="slds-button__icon slds-button__icon_large fillColor" iconName="utility:close" size="x-small" alternativeText="search" onclick="{!c.closeModal}"/>
                            <span class="slds-assistive-text">Close</span>
                        </button>
                        
                        <h2 id="id-of-modalheader-h2" class="slds-text-heading_medium">Search Account</h2>
                    </header>
                    <!-- Header End-->
                    
                    <!-- Body Content Start-->
                    <div class="slds-modal__content slds-grow modal-overflow slds-scrollable_x" id="modal-content-id-1" style="overflow:auto">
                        <c:MSD_CORE_AccSearchMVN recordId="{!v.recordId}"></c:MSD_CORE_AccSearchMVN>
                    </div>
                    
                    <footer class="slds-modal__footer" style="padding: 5px;background: #fff;">
                        <div class="slds-align_absolute-center" style="padding: 5px;background: #fff;">
                            <lightning:button label="{!v.closeSearchBtn}" name="{!v.closeSearchBtn}" variant="brand" onclick="{!c.closeModal}"/>
                        </div>
                    </footer>
                </div>
            </section>
            <div class="slds-backdrop slds-backdrop_open"></div>
        </div>
   	</aura:if>
    
    <aura:if isTrue="{!v.showAffiliationModal}">
        <div id="affiliationModal" class="slds-show" aura:id="affiliationModal" style="position:relative;">
            <section role="dialog" tabindex="-1" class="slds-modal slds-fade-in-open slds-modal_small" aria-labelledby="id-of-modalheader-h2" aria-describedby="modal-content-id-1">
                <div class="slds-modal__container" style="height:300px;top:100px;"> 
                    <!-- Header Start-->
                    <header class="slds-modal__header">
                        <button class="glc-button slds-button slds-button_icon slds-modal__close slds-button_icon-inverse" title="Close" onclick="{!c.cancelAffiliation}">
                            <lightning:icon class="slds-button__icon slds-button__icon_large fillColor" iconName="utility:close" size="x-small" alternativeText="search" onclick="{!c.cancelAffiliation}"/>
                            <span class="slds-assistive-text">Close</span>
                        </button>
                        <h2 id="id-of-modalheader-h2" class="slds-text-heading_medium">Affiliation</h2>
                    </header>
                    <!-- Header End-->
                    
                    <!-- Body Content Start-->
                    <div class="slds-modal__content slds-grow modal-overflow slds-scrollable_x" id="modal-content-id-1" style="overflow:visible">
                        <lightning:layout>
                            <lightning:layoutItem flexibility="auto" padding="around-small">
                                What Role Does {!v.affiliationFrom} Have at {!v.affiliationTo}?
                            </lightning:layoutItem>
                        </lightning:layout>
                        <lightning:recordEditForm aura:id="affiliation" objectApiName="Child_Account_vod__c" onsubmit="{!c.handleSubmit}"
                                                  onsuccess="{!c.handleSuccess}">
                            <lightning:messages />
                            <lightning:layout>
                                <lightning:layoutItem flexibility="auto" padding="around-small">
                                    <lightning:inputField fieldName="Role_MRK__c" />
                                </lightning:layoutItem>
                            </lightning:layout>
                            <div class="slds-align_absolute-center" >
                                <lightning:button label="Cancel" name="Cancel" variant="neutral" onclick="{!c.cancelAffiliation}"/>
                                <lightning:button type= "submit" label="Create Affiliation" name="Create Affiliation" variant="brand"/>
                            </div>
                        </lightning:recordEditForm>
                    </div>
                </div>
            </section>
            <div class="slds-backdrop slds-backdrop_open"></div>
        </div>
    </aura:if>
</aura:component>