<aura:component extends="c:ComponentUtils" controller="MSD_CORE_CC_SelectedRequesterController" implements="flexipage:availableForRecordHome,force:hasSObjectName,force:hasRecordId,force:lightningQuickActionWithoutHeader" access="global" >
	<aura:attribute name="fieldList" type="Map" default="{}"/>
    <aura:attribute name="searchCriteria" type="Map" default="{}"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <aura:attribute name="statePicklistValues" type="List"/>
    <aura:attribute name="countryPicklistValues" type="List"/>    
    
    <div class="slds-grid slds-gutters slds-wrap">
            <aura:iteration items="{!v.fieldList.Search}" var="f">
                <div class="slds-col slds-size_1-of-4 slds-p-top_x-small"> 
                    <aura:if isTrue="{!and(f.fieldName!='State_vod__c',f.fieldName!='Country_vod__c')}">
                        <lightning:input aura:id="enter-search"
                                         name="enter-search"
                                         value="{!f.value}"
                                         label="Search by hitting 'enter' key"
                                         isLoading="{! v.issearching }"
                                         type="search"
                                         variant="label-hidden"
                                         placeholder="{!f.placeholder}"
                                         />
                    </aura:if>
                    <aura:if isTrue="{!f.fieldName =='State_vod__c'}">
                        <lightning:select class="noLabel" variant="label-hidden" value="{!f.value}">
                            <aura:iteration items="{!v.statePicklistValues}" var="item">
                                <option text="{!item.label}" value="{!item.value}"/>
                            </aura:iteration>
                        </lightning:select>
                    </aura:if>
                    <aura:if isTrue="{!f.fieldName =='Country_vod__c'}">
                        <lightning:select class="noLabel" variant="label-hidden" value="{!f.value}">
                            <aura:iteration items="{!v.countryPicklistValues}" var="item">
                                <option text="{!item.label}" value="{!item.value}" />
                            </aura:iteration>
                        </lightning:select>
                        
                    </aura:if>
                </div>
            </aura:iteration>
    </div>
    <br/>
        <div class="slds-align_absolute-center">
             <lightning:button variant="brand"
                                  name="Search"
                                  label="{!$Label.c.MSD_CORE_Account_Search}"
                                  iconName="utility:search" 
                                  onclick="{!c.openSearchModal}"
                                  class="slds-m-right_x-small"/>
            <lightning:button variant="neutral"
                                  name="Clear"
                                  label="Clear"
                                  onclick="{!c.clearSearch}"
                                  class="slds-m-right_x-small"/>
            
        </div>
        
        <div id="searchAccountModal" class="slds-hide slds-scrollable" aura:id="searchAccountModal" style="position:relative;">
        <section role="dialog" tabindex="-1" class="slds-modal slds-fade-in-open slds-modal_large" aria-labelledby="id-of-modalheader-h2" aria-describedby="modal-content-id-1">
            <div class="slds-modal__container" style="height: 90%; top: 10%; width: 98%;"> 
                <!-- Header Start-->
                <header class="slds-modal__header">
                    <button class="glc-button slds-button slds-button_icon slds-modal__close slds-button_icon-inverse" title="Close" onclick="{!c.closeModal}">
                        <lightning:icon class="slds-button__icon slds-button__icon_large fillColor" iconName="utility:close" size="x-small" alternativeText="search" onclick="{!c.closeModal}"/>
                        <span class="slds-assistive-text">Close</span>
                    </button>
                    <h2 id="id-of-modalheader-h2" class="slds-text-heading_medium">Search Account</h2>
                </header>
                <!-- Header End-->
                
                <!-- Body Content Start-->
                <div class="slds-modal__content slds-grow modal-overflow slds-scrollable_x" id="modal-content-id-1" style="overflow:auto">
                    <c:MSD_CORE_AccSearchMVN searchCriteria="{!v.fieldList}"/>
                </div>
                
                <footer class="slds-modal__footer">
                </footer>
            </div>
        </section>
        <div class="slds-backdrop slds-backdrop_open"></div>
    </div>        
</aura:component>