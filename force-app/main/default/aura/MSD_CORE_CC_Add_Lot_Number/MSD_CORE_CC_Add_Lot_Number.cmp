<aura:component extends="c:ComponentUtils" implements="lightning:actionOverride,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickActionWithoutHeader" access="global" description="Used to create Lot Number">
    
    <!-- Component Attributes -->
    <aura:attribute name="objCase" type="Object" />
    <aura:attribute name="recordLoadError" type="String"/>
    <force:recordData aura:id="recordLoader"
                      recordId="{!v.recordId}"
                      fields="RecordTypeId, RecordType.Name"
                      targetFields="{!v.objCase}"
                      targetError="{!v.recordLoadError}"
                      mode="VIEW"
                      />
    <!-- Event Handlers -->
    <aura:handler name="MSD_CORE_CC_CloseModalEvt" event="c:MSD_CORE_CC_CloseModalEvt"
                  action="{!c.handleCloseEvent}"/>
    
    <!-- Component Markup -->
    <div class="flexipageComponent">
        <div class="container forceRelatedListSingleContainer">
            <button style="top: 10px;
                           z-index: 1;
                           float: right;
                           width: 60px;
                           margin-right: 5px;
                           padding: 0;" class="slds-button slds-button_brand" onclick="{!c.addLot}">
                <span class="slds-text-heading--small slds-truncate slds-m-right--xx-medium" >Add</span>
            </button>
        </div>
    </div>
    <div aura:id="addLot" class="slds-hide slds-scrollable" style="position:relative;">
        <section role="dialog" tabindex="-1" class="slds-modal slds-fade-in-open slds-modal_small" aria-labelledby="id-of-modalheader-h2" aria-describedby="modal-content-id-1">
            <div class="slds-modal__container"> 
                <!-- Header Start-->
                <header class="slds-modal__header">
                    <button class="glc-button slds-button slds-button_icon slds-modal__close slds-button_icon-inverse" title="Close" onclick="{!c.closeModal}">
                        <lightning:icon class="slds-button__icon slds-button__icon_large fillColor" iconName="utility:close" size="x-small" alternativeText="search" onclick="{!c.closeModal}"/>
                        <span class="slds-assistive-text">Close</span>
                    </button>
                    <h2 id="id-of-modalheader-h2" class="slds-text-heading_medium">Add Lot Number</h2>
                    
                    <div style="right: 10px; position: absolute; top: 13px;">
                        <lightning:button label="X" name="Close Search" onclick="{!c.closeModal}"/>
                    </div>
                </header>
                <!-- Header End-->
                
                <!-- Body Content Start-->
                <div class="slds-modal__content modal-overflow slds-scrollable_x" id="modal-content-id-1" style="overflow:auto">
                    
                    <div class="slds-col slds-grid slds-grid_vertical slds-scrollable_x ">
                        <div class="slds-theme_shade">
                            <div class="slds-form-element">
                                
                                <div class="slds-form-element__control">
                                    <!--<div aura:id="addlCaseContactsSearchModal"> </div>-->
                                    <c:MSD_CORE_CC_Add_Lot_Number_Form parentId="{!v.recordId}" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Body Content End-->
                <footer class="slds-modal__footer">
                </footer>
            </div>
        </section>
        <div class="slds-backdrop slds-backdrop_open"></div>
    </div>
</aura:component>