<aura:component controller="MSD_CORE_SelectItem" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
	<aura:attribute name="options" type="MSD_CORE_SelectItem[]" />
    <aura:attribute name="options_" type="MSD_CORE_SelectItem[]" default="[]"/>
    <aura:attribute name="selectedItems" type="String[]" />
    <aura:attribute name="selProductRegion" type="String[]" />
    <aura:attribute name="disabledPicklist" type="Boolean" default="false" />
    <aura:attribute name="depnedentFieldMap" type="map" description="map to store dependent values with controlling value"/>
    <aura:attribute name="selectedItemsLocal" type="String" />
    <aura:attribute name="infoText" type="String" default="Select an option..." />
    <aura:attribute name="width" type="String" default="240px;" />
    <aura:attribute name="viewClass" type="String" default="" />
    <aura:attribute name="dropdownLength" type="Integer" default="5" />
    <aura:registerEvent name="selectChange" type="c:MSD_CORE_MultiSelectEvt" />
    <aura:handler name="change" value="{!v.options}" action="{!c.init}"/>
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/> 
    <aura:handler event="c:MSD_CORE_MultiSelectEvt" action="{!c.changeOption}"/>
    
    <aura:method name="reInit" action="{!c.init}"
                 description="Allows the lookup to be reinitalized">
    </aura:method>
    
    <aura:attribute name="dropdownOver" type="Boolean" default="true" />
    
    <lightning:spinner aura:id="spinner2" alternativeText="Processing.." title="Processing.." variant="brand" size="small" class="slds-hide"/>
    <div aura:id="main-div"  class=" slds-picklist slds-dropdown-trigger slds-dropdown-trigger--click " >
        <button class="slds-button slds-button--neutral slds-picklist__label" disabled="{!v.disabledPicklist}"
                aria-haspopup="true" onclick="{!c.handleClick}" onmouseleave="{!c.handleMouseOutButton}" onkeyup="{!c.keyPressController}">
            <span class="slds-truncate" title="{!v.infoText}">{!v.infoText}</span>
            
            <lightning:icon iconName="utility:down" size="small" class="slds-icon" />
        </button>
        
        <div class="{!'slds-dropdown slds-dropdown--left '}" onmouseenter="{!c.handleMouseEnter}" onmouseleave="{!c.handleMouseLeave}">
            <ul class="{!'slds-dropdown__list slds-dropdown--length-' + v.dropdownLength +' '+ v.viewClass}" role="menu">
                
                <aura:iteration items="{!v.options_}" var="option">
                    <li class="{!'slds-dropdown__item ' + (option.selected ? 'slds-is-selected' : '')}" 
                        role="presentation" onclick="{!c.handleSelection}" data-value="{!option.value}" data-selected="{!option.selected}" options="{!v.selectedItemsLocal}">
                        <a href="javascript:void(0);" role="menuitemcheckbox" aria-checked="true" tabindex="0">
                            <span class="slds-truncate">
                                <lightning:icon iconName="utility:check" size="x-small" class="slds-icon slds-icon--selected slds-icon--x-small slds-icon-text-default slds-m-right--x-small" />{!option.label}
                            </span>
                        </a>
                    </li>
                </aura:iteration>
                
            </ul>
        </div>
    </div>
</aura:component>