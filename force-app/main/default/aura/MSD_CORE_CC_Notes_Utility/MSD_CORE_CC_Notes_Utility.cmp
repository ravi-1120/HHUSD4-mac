<aura:component controller="MSD_CORE_CC_Notes_UtilityController" implements="force:hasRecordId,flexipage:availableForAllPageTypes" access="global">
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    
    <aura:handler event="force:refreshView" action="{!c.doInit}" /> 
    <aura:attribute name="userProfile" type="String"/>
    <aura:attribute name="Rtname" type="Boolean"/>
    <aura:attribute name="restrictNew" type="Boolean" default="false"/>    
    
    <aura:handler name="change" value="{!v.recordId}" action="{!c.onRecordIdChange}"/>
    <aura:attribute name="isCaseRecord" type="Boolean"/>
    <aura:attribute name="lstNotes" type="List"/>
    <lightning:overlayLibrary aura:id="overlayLib"/>
    <div style="{!v.Rtname ? 'display:block;' : 'display:none;'}">
        <aura:if isTrue="{!v.isCaseRecord}">
            <aura:if isTrue="{!v.lstNotes.length > 0}">
                <div class="slds-p-around_x-small slds-clearfix" style="background-color : rgb(243, 242, 242)">
                    {!v.lstNotes.length} items
                    <aura:if isTrue="{!v.userProfile !='MSD_CORE Contact Center - Read Only User'}">
                        <aura:if isTrue="{!v.userProfile !='MSD_CORE Contact Center - Read Only User Non-SSO'}">
                            <aura:if isTrue="{!v.Rtname}">
                                <aura:if isTrue="{!!v.restrictNew}">
                                <div class="slds-button slds-float--right">
                                    <lightning:button label="New" variant="brand" onclick="{!c.newNote}"/>
                                </div>
                                </aura:if>
                            </aura:if>
                        </aura:if>
                    </aura:if>
                </div>
                
                <aura:iteration items="{!v.lstNotes}" var="note">
                    <div class="demo-only" style="margin: 10px; border: 1px solid #ccc; border-radius: 3px; background: #fafafa; padding: 5px;">
                        <ul class="slds-timeline">
                            <li>
                                <div aura:id="changeIt" class="slds-timeline__item_expandable slds-timeline__item_call" >
                                    <span class="slds-assistive-text">Note</span>
                                    <div class="slds-media">
                                        <div class="slds-media__figure">
                                            <div class="slds-icon_container slds-icon-standard-call slds-timeline__icon">
                                                <lightning:icon iconName="standard:note" variant="inverse" size="small"  title="Note" />
                                            </div>
                                        </div>
                                        <div class="slds-media__body">
                                            <div class="slds-grid slds-grid_align-spread slds-timeline__trigger">
                                                <div class="slds-grid slds-grid_vertical-align-center slds-truncate_container_75 slds-no-space">
                                                    <h3 class="slds-truncate" title="{!note.Name}">
                                                        <a data-recId="{!note.Id}" onclick="{!c.handleRedirect}" target="_blank" class="slds-truncate" title="">{!note.Name}</a>
                                                    </h3>
                                                    <div class="slds-no-flex">
                                                        <span class="slds-icon_container slds-icon-utility-rotate" title="Recurring Task">               
                                                            <span class="slds-assistive-text">Recurring Task</span>
                                                        </span>
                                                    </div>
                                                </div>
                                                <div class="slds-timeline__actions slds-timeline__actions_inline">
                                                    <ui:outputDateTime value="{!note.CreatedDate}" format="MMM dd, yyyy hh:mm a"/>
                                                </div>
                                                
                                            </div>
                                            
                                            <p class="slds-m-horizontal_xx-small">
                                                Note : <aura:unescapedHtml value="{!note.MSD_CORE_Note__c}" />
                                            </p>
                                            <p class="slds-m-horizontal_xx-small">
                                                Created By : {!note.CreatedBy.Name}
                                            </p>
                                            <article class="slds-box slds-timeline__item_details slds-theme_shade slds-m-top_x-small slds-m-horizontal_xx-small slds-p-around_medium"
                                                     id="task-item-narrow" aria-hidden="false">
                                                <ul>
                                                    <div>
                                                        <span class="slds-text-title">CreatedBy</span>
                                                        <p class="slds-p-top_x-small">{!note.CreatedDate}</p>
                                                    </div>
                                                </ul>
                                                <br/>
                                                
                                                
                                            </article>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>            
                </aura:iteration>
                <aura:set attribute="else">
                    <div class="slds-p-around_x-small slds-clearfix" style="background-color : rgb(243, 242, 242)">
                        No items to display
                        <aura:if isTrue="{!v.userProfile !='MSD_CORE Contact Center - Read Only User'}">
                            <aura:if isTrue="{!v.userProfile !='MSD_CORE Contact Center - Read Only User Non-SSO'}">
                                <aura:if isTrue="{!v.Rtname}">
                                    <aura:if isTrue="{!!v.restrictNew}">
                                        <div class="slds-button slds-float--right">
                                            <lightning:button label="New" variant="brand" onclick="{!c.newNote}"/>
                                        </div>
                                    </aura:if>
                                </aura:if>
                            </aura:if>
                        </aura:if> 
                    </div>
                </aura:set>
            </aura:if>
            
        </aura:if>
    </div>
    
    <aura:if isTrue="{!!v.isCaseRecord}">
        <ui:message severity="info" closable="false">
            Notes not applicable.
        </ui:message>
    </aura:if>
    
    <div style="{!v.Rtname ? 'display:none;' : 'display:block;'}">
        <ui:message severity="info" closable="false">
            Notes not applicable for Interaction Case and Read only profiles.
        </ui:message>
    </div>
    
    <div id="newNote" class="slds-hide slds-scrollable" aura:id="newNote">
        <section role="dialog" tabindex="-1" class="slds-modal slds-fade-in-open slds-modal_medium" aria-labelledby="id-of-modalheader-h2" aria-describedby="modal-content-id-1">
            <div class="slds-modal__container" >
                <header class="slds-modal__header">
                    <button class="glc-button slds-button slds-button_icon slds-modal__close slds-button_icon-inverse" title="Close" onclick="{!c.closeModal}">
                        <lightning:icon class="slds-button__icon slds-button__icon_large fillColor" iconName="utility:close" size="x-small" alternativeText="search" onclick="{!c.cancel}"/>
                        <span class="slds-assistive-text">Close</span>
                    </button>
                    <h2 id="id-of-modalheader-h2" class="slds-text-heading_medium">New Note</h2>
                </header>
                <div class="slds-modal__content slds-grow modal-overflow slds-scrollable_x" id="modal-content-id-1" style="overflow:auto">
                    
                    <div class="slds-col slds-grid slds-grid_vertical slds-scrollable_x ">
                        <div class="slds-p-vertical_x-small slds-p-horizontal_large slds-theme_shade">
                            <div class="slds-form-element">
                                
                                <div class="slds-form-element__control">
                                    <div class="slds-combobox_container">
                                        NEW NOTE
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <footer class="slds-modal__footer">
                    <lightning:button label="Cancel" name="Cancel" onclick="{!c.closeModal}" />
                </footer>
            </div>
        </section>
        <div class="slds-backdrop slds-backdrop_open"></div>
    </div>
</aura:component>