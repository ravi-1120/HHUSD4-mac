<aura:component implements="force:lightningQuickActionWithoutHeader,force:hasRecordId" controller="MCAConvertToCallController">
    <aura:attribute name="recordId" type="Id" />

    <aura:handler name="init" value="{!this}" action="{!c.init}"/>

    <aura:html tag="style">
        .cuf-content {
        	padding: 0 0rem !important;
        }
        .slds-p-around--medium {
        	padding: 0rem !important;
        }
        .quick-actions-panel > .slds-modal__content {
            overflow-y: hidden !important;
            height: unset !important;
            max-height: unset !important;
        	min-height: 350px;
        }
        .slds-m-top_large {
        	min-height: 350px;
        }
        div.flowruntimeBody {
            padding: 0 !important;
            margin: 0 !important;
        }
        c-veeva-modal .slds-modal__content {
            min-height: unset !important;
        }
        c-veeva-modal .slds-modal__content slot[name="content"] > div {
            padding: 15px 0;
            line-height: 1.5;
        }
        c-veeva-modal .slds-modal__content slot[name="content"] > div > lightning-layout {
            justify-content: flex-start;
        }
        @media screen and (min-width: 48em) {
            c-veeva-account-search c-veeva-modal .slds-modal_large .slds-modal__container,
            c-s4l-call-selector c-veeva-modal .slds-modal_large .slds-modal__container {
                width: 200%;
                max-width: unset;
                margin-left: -50%;
            }
        }
    </aura:html>

    <lightning:navigation aura:id="navService"/>
    <lightning:flow aura:id="flowData" onstatuschange="{!c.handleStatusChange}"/>
    <lightning:workspaceAPI aura:id="workspace"/>
</aura:component>